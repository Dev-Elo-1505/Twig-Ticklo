<div id="delete-ticket-modal" class="hidden fixed inset-0 z-50 flex items-center justify-center">
  <div class="absolute inset-0 bg-black/50" data-modal-close="true"></div>

  <div role="dialog" aria-modal="true" class="relative bg-white dark:bg-gray-800 rounded-lg shadow-lg max-w-md w-full mx-4 p-6">
    <h3 class="text-lg font-semibold mb-2">Confirm delete</h3>
    <div class="text-sm text-gray-600 mb-4">Are you sure you want to delete this ticket?</div>

    <form id="delete-form" method="post" action="/tickets/" class="flex justify-end gap-3">
      <button type="button" data-modal-close="true" class="px-4 py-2 rounded-md bg-gray-200">Cancel</button>
      <button id="delete-confirm-btn" type="submit" class="px-4 py-2 rounded-md bg-red-500 text-white">Delete</button>
    </form>
  </div>
</div>
