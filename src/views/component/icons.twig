{# icons.twig — uses ion-icon web components for consistent Ionicons visuals #}
{# Usage: {% import 'component/icons.twig' as icons %} {{ icons.ticket('text-lg') }} #}

{% macro ticket(classes='text-lg') %}
  <ion-icon name="ticket-outline" class="{{ classes }}" aria-hidden="true"></ion-icon>
{% endmacro %}

{% macro folder(classes='text-lg') %}
  <ion-icon name="folder-open-outline" class="{{ classes }}" aria-hidden="true"></ion-icon>
{% endmacro %}

{% macro progress(classes='text-lg') %}
  <ion-icon name="sync-outline" class="{{ classes }}" aria-hidden="true"></ion-icon>
{% endmacro %}

{% macro check(classes='text-lg') %}
  <ion-icon name="checkmark-circle-outline" class="{{ classes }}" aria-hidden="true"></ion-icon>
{% endmacro %}
