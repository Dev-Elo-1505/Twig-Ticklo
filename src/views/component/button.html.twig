{#
  button.html.twig
  Parameters: title, type (default: 'button'), customClass (optional), disabled (default: false)
#}
<button
    class="{{ customClass|default('') }} bg-primary text-white w-full p-2 rounded-full text-sm md:text-md hover:opacity-90 active:scale-95 cursor-pointer{% if disabled %} disabled:cursor-not-allowed disabled:opacity-50{% endif %}"
    type="{{ type|default('button') }}"
    {% if disabled %}disabled{% endif %}
>
    {{ title }}
</button>