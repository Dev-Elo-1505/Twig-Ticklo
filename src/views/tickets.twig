{% extends 'layouts/base.twig' %}

{% block title %}Tickets - Ticklo{% endblock %}

{% block content %}
    {% include 'component/appnavbar.twig' with { title: 'Ticklo' } %}

    <div class="p-4 md:px-12 md:py-6 font-inter mx-auto max-w-[1440px]">
        <main class="mt-6 flex flex-col items-center justify-center">
            {% if tickets is empty %}
                <div class="text-center">
                    <div aria-hidden="true" class="w-full h-full">
                        {# inline newTicket svg passed from controller #}
                        {{ new_ticket_svg|raw }}
                    </div>
                    <div class="mt-4 text-center">
                        <h3 class="font-light text-sm mb-2">Get started by creating a new ticket</h3>
                        <button data-modal-target="create-ticket-modal" class="px-4 py-2 rounded-md bg-primary text-white">Create Ticket</button>
                    </div>
                </div>
            {% else %}
                <div class="w-full">
                    <div class="flex flex-col md:flex-row md:items-center justify-between mb-4">
                        <h2 class="text-lg font-semibold md:mb-4">Recent Tickets</h2>
                        <div class="flex flex-col md:flex-row md:items-center md:gap-2">
                            {% include 'component/button-link.twig' with { title: 'Go to Dashboard', location: '/dashboard', customClass: 'bg-primary text-white text-center w-full md:w-36 mb-2 mt-2' } %}
                            <button data-modal-target="create-ticket-modal" class="px-4 py-2 rounded-md bg-primary text-white w-full md:w-32">Create Ticket</button>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        {% for tk in tickets %}
                            <div class="border shadow border-white/20 rounded-md p-4 bg-white/5 flex flex-col justify-between">
                                <div>
                                    <div class="flex items-center justify-between">
                                        <h3 class="font-semibold">{{ tk.title }}</h3>
                                        <div class="flex items-center gap-2">
                                            <span class="px-2 py-1 rounded-full flex items-center justify-center text-xs font-semibold capitalize {% if tk.status == 'open' %}bg-green-300/50 text-green-900{% elseif tk.status == 'in_progress' %}bg-amber-300/50 text-amber-900{% else %}bg-gray-300/50 text-gray-900{% endif %}">{{ tk.status|replace({'_':' '}) }}</span>
                                        </div>
                                    </div>
                                    {% if tk.description %}
                                        <p class="mt-2 text-sm text-gray-400 truncate">{{ tk.description }}</p>
                                    {% endif %}
                                </div>
                                <div class="flex items-center justify-end gap-2 mt-4">
                                    <form method="post" action="/tickets/{{ tk.id }}/edit" style="display:inline-block">
                                        <input type="hidden" name="title" value="{{ tk.title|e }}">
                                        <input type="hidden" name="description" value="{{ tk.description|e }}">
                                        <input type="hidden" name="status" value="{{ tk.status }}">
                                        <button type="submit" class="px-3 py-2 rounded-md bg-gray-200">Edit</button>
                                    </form>
                                    <form method="post" action="/tickets/{{ tk.id }}/delete" style="display:inline-block">
                                        <button type="submit" class="px-3 py-2 rounded-md bg-red-500 text-white">Delete</button>
                                    </form>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </main>

        {# Include the create/edit ticket modal partial #}
        {% include 'component/create-ticket.twig' %}
    </div>
{% endblock %}
